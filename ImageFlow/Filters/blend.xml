<?xml version="1.0"?>
<filter>
  <name>blend</name>
  <description>Blend titi and toto</description>
  <expression>
    <operation name="blend">
      <parent index="0"/>
      <operation name="translate">
        <operation name="opacity">
          <parent index="1"/>
          <variable name="alpha"/>
        </operation>
        <variable name="translation"/>
      </operation>
      <variable name="mode"/>
    </operation>
  </expression>
  <min_parents>2</min_parents>
  <max_parents>2</max_parents>
  <settings_nib>IFBlendFilter</settings_nib>
  <delegate_class>IFBlendFilterDelegate</delegate_class>
</filter>
